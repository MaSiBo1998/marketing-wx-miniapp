{
    "easycom": {
        "^u-(.*)": "@/uni_modules/uview-ui/components/u-$1/u-$1.vue"
    },
    "pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
        {
            "path": "pages/home/index",
            "style": {
                "navigationBarTitleText": "华侨城演艺数字化平台",
                "enablePullDownRefresh": true,
                "onReachBottonDistance": 150
            }
        },
        {
            "path": "pages/home/detail/index",
            "style": {
                "navigationBarTitleText": "经典案例"
            }
        },
        {
            "path": "pages/user/index",
            "style": {
                "navigationBarTitleText": "我的",
                "navigationStyle": "custom",
                "enablePullDownRefresh": true,
                "onReachBottonDistance": 150
            }
        },
        {
            "path": "pages/user/register/index",
            "style": {
                "navigationBarTitleText": "注册"
            }
        },
        {
            "path": "pages/login/authorize",
            "style": {
                "navigationBarTitleText": "授权登录"
            }
        },
        {
            "path": "pages/login/mobile",
            "style": {
                "navigationBarTitleText": "手机号登录"
            }
        },
        {
            "path": "pages/active/index",
            "style": {
                "navigationBarTitleText": "活动招募",
                "enablePullDownRefresh": true,
                "onReachBottonDistance": 150
            }
        },
        {
            "path": "pages/active/detail/index",
            "style": {
                "navigationBarTitleText": "活动招募"
            }
        },
        {
            "path": "pages/actorList/index",
            "style": {
                "navigationBarTitleText": "演员例表",
                "enablePullDownRefresh": true,
                "onReachBottonDistance": 150
            }
        },
        {
            "path": "pages/actorList/actorDetail/index",
            "style": {
                "navigationBarTitleText": "演员详情"
            }
        }
    ],
    "globalStyle": {
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "uni-app",
        "navigationBarBackgroundColor": "#FFFFFF",
        "backgroundColor": "#FFFFFF"
    },
    "uniIdRouter": {},
    "tabBar": {
        "backgroundColor": "#FFFFFF",
        "color": "#8a8a8a",
        "selectedColor": "#2c2c2c",
        "list": [{
                "pagePath": "pages/home/index",
                "text": "首页",
                "iconPath": "static/tabIcon/inactive-home.png",
                "selectedIconPath": "static/tabIcon/active-home.png",
                "enablePullDownRefresh": true
            },
            {
                "pagePath": "pages/active/index",
                "text": "活动招募",
                "iconPath": "static/tabIcon/inactive-clock.png",
                "selectedIconPath": "static/tabIcon/active-clock.png",
                "enablePullDownRefresh": true
            },
            {
                "pagePath": "pages/actorList/index",
                "text": "演员例表",
                "iconPath": "static/tabIcon/inactive-list.png",
                "selectedIconPath": "static/tabIcon/active-list.png",
                "enablePullDownRefresh": true
            },
            {
                "pagePath": "pages/user/index",
                "text": "我的",
                "iconPath": "static/tabIcon/inactive-user.png",
                "selectedIconPath": "static/tabIcon/active-user.png"
            }
        ]
    }
}